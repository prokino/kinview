{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
              "/*": "/__vscode-remote-uri__/*"
            },
        },
    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chromium",
            "url": "http://localhost:3000",
            "runtimeExecutable": "/usr/bin/chromium",
            "webRoot": "/home/saber/workspace/prokino/kinview",

        },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src",
            "sourceMapPathOverrides": {
              "/mnt/c/*": "/__vscode-remote-uri__/mnt/c/*",
            },
            "env": { "CI": true },
          
        }
        
    ]
}